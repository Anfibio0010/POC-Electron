{
  "name": "POC-Electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "cross-env electron dist/src/main.js",
    "start:electron": "cross-env pnpm tsc && electron dist/src/main.js",
    "dev": "cross-env electron dist/src/main.js",
    "dev:watch": "cross-env nodemon --exec \"electron dist/src/main.js\" --watch dist/src/ --watch dist/ui/",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development nodemon --exec \"electron dist/src/main.js\" --watch dist/src/main.js --watch dist/src/preload.js",
    "dev:react": "concurrently \"pnpm run dev:vite\" \"pnpm run dev:electron\" --names \"VITE,ELECTRON\" --prefix-colors \"blue,green\"",
    "build": "vite build",
    "build:electron": "cross-env pnpm run build && electron .",
    "build-css": "tailwindcss -i ./src/renderer/index.css -o ./ui/dist/styles.css",
    "build:all": "pnpm tsc && pnpm tsc -p tsconfig.preload.json",
    "watch-css": "tailwindcss -i ./src/renderer/index.css -o ./ui/dist/styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
