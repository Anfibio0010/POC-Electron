{
  "name": "POC-Electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:electron": "cross-env pnpm tsc && electron dist/src/main.js",
    "dev": "cross-env electron dist/src/main.js",
    "dev:watch": "cross-env nodemon --exec \"electron dist/src/main.js\" --watch dist/src/ --watch dist/ui/",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development nodemon --exec \"electron dist/src/main.js\" --watch dist/src/main.js --watch dist/src/preload.js",
    "dev:react": "concurrently \"pnpm run dev:vite\" \"pnpm run dev:electron\" --names \"VITE,ELECTRON\" --prefix-colors \"blue,green\"",
    "build": "vite build",
    "build:electron": "cross-env pnpm run build && electron .",
    "build-css": "tailwindcss -i ./src/renderer/index.css -o ./ui/dist/styles.css",
    "build:all": "pnpm tsc && pnpm tsc -p tsconfig.preload.json && mkdir -p notas",
    "watch-css": "tailwindcss -i ./src/renderer/index.css -o ./ui/dist/styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build:win": "electron-builder --win",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.yourcompany.poc-electron",
    "productName": "POC Electron",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
