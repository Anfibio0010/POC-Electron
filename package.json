{
  "name": "POC-Electron",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:watch": "NODE_ENV=development nodemon --exec electron . --watch src/ --watch ui/",
    "dev:hot": "concurrently \"npm run watch-css\" \"npm run dev:watch\" --names \"CSS,ELECTRON\" --prefix-colors \"blue,green\"",
    "build-css": "tailwindcss -i ./ui/styles.css -o ./ui/dist.css",
    "watch-css": "tailwindcss -i ./ui/styles.css -o ./ui/dist.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^8.2.2",
    "electron": "^37.2.6",
    "electron-reload": "2.0.0-alpha.1",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.11"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
